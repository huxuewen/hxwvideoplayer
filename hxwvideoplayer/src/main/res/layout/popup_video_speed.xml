<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#f21c1c1d"
        android:orientation="vertical"
        tools:context="com.hxw.hxwvideoplayer.ui.VideoSpeedPopup">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="24dp"
        android:text="倍数"
        android:textColor="#ffffffff"
        android:textSize="18sp" />

    <TextView
            android:id="@+id/pop_speed_0_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="0.5X"
            android:textColor="@color/white"
            android:textSize="15sp" />

    <TextView
        android:id="@+id/pop_speed_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="1X"
        android:textColor="#ffff5c00"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/pop_speed_1_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="1.25X"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/pop_speed_1_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="1.5X"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/pop_speed_1_75"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="1.75X"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/pop_speed_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="2X"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>